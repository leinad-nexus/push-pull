        public class Hilo extends Thread {
            int a=0;
            public void run(){
                for(int a=1; a<5; a++){
                try {
                    jLabel1.setText(Integer.toString(a));
                    Thread.sleep(1000);
                } catch (InterruptedException ex) {
                    Logger.getLogger(proceso.class.getName()).log(Level.SEVERE, null, ex);
